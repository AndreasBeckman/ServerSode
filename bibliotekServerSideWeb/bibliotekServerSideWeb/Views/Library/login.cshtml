@{
    ViewBag.Title = "Universitetsbiblioteket";
}


@using (Html.BeginForm("Login", "Library", FormMethod.Get))
{
    <div id="loginContent">

        <h1>Login!</h1>
        <form>

            <div id="loginInfoContent">        
                   
                <div><input type="text" name="user" placeholder="Username" style="background-color:transparent; color:black" /></div>
                <div><input type="text" name="pass" placeholder="Password" style="background-color:transparent; color:black" /></div>

                <div>@ViewBag.Author;</div>

                @*<div>
                    <input type="radio" value="borrower" name="permission" />Borrower
                    <input type="radio" value="admin"    name="permission" />Admin
                </div>*@

                <input type="submit" value="Login" />

            </div>
            
        </form>

    </div>
}